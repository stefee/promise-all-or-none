{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
